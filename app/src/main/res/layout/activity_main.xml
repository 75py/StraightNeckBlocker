<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.nagopy.android.straightneckblocker.viewmodel.MainViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <com.google.android.gms.ads.AdView
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id" />

            <Button
                android:id="@+id/button_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad"
                android:onClick="@{vm::onClickServiceToggle}"
                android:text="@{vm.isServiceEnabled ? `Stop` : `Start`}" />

            <Button
                android:id="@+id/button_accessibility_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_service"
                android:layout_marginTop="@dimen/activity_main_text_margin"
                android:onClick="@{vm::onClickAccessibilitySettingsButton}"
                android:text="Accessibility settings" />

            <TextView
                android:id="@+id/msg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_accessibility_settings"
                android:layout_marginTop="@dimen/activity_main_text_margin"
                android:drawablePadding="@dimen/activity_main_text_margin"
                android:drawableStart="@mipmap/ic_normal"
                android:text="ストレートネックブロッカーは、スマホの角度を監視し、適正な角度で使用することをサポートします。" />

            <TextView
                android:id="@+id/msg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg1"
                android:layout_marginTop="@dimen/activity_main_text_margin"
                android:drawablePadding="@dimen/activity_main_text_margin"
                android:drawableStart="@mipmap/ic_bad"
                android:text="一定時間 30度 を下回ると、警告が表示されます。" />

            <TextView
                android:id="@+id/msg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg2"
                android:layout_marginTop="@dimen/activity_main_text_margin"
                android:drawablePadding="@dimen/activity_main_text_margin"
                android:drawableStart="@mipmap/ic_good"
                android:text="平安歌人になったような気持ちでスマホを持ち、前を向いて操作しましょう。" />


        </RelativeLayout>
    </ScrollView>
</layout>